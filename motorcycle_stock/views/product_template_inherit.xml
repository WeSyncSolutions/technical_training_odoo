<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_product_form" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit.motorcycle.registry</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="detailed_type" position = "after">
                <field name="make" attrs="{'invisible':[('detailed_type','!=','motorcyle')]}"/>                
            </field>
<!--Use Xpaht-->
            <xpath expr="//sheet//notebook" position="inside">
                <page string="Motorcycle Data" attrs="{'invisible':[('detailed_type','!=','motorcyle')]}">
                    <group>
                        <group>
                            <separator string="Motrocycle Information"/>
                            <field name="make" />
                            <field name="model" />
                            <field name="year" />
                            <field name="year" />
                            <field name="curb_weight" />
                            <field name="launch_date" />                            
                        </group>
                        <group>
                            <separator string="Engine Information"/>
                            <field name="horse_power" />
                            <field name="top_speed" />
                            <field name="torque" />                            
                        </group>                        
                    </group>
                    <group>
                        <group>
                            <separator string="Power Information"/>
                            <field name="battery_capacity" />
                            <field name="charge_time" />      
                            <field name="range" />                      
                        </group>                        
                    </group>                    
                </page>                
            </xpath>
        </field>    
    </record>
</odoo>
